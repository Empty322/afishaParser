<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:afishaParser.Styles">

	<Style TargetType="{x:Type TextBox}" x:Key="TextBoxTamplate">
		<Setter Property="Background" Value="Black"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Border Background="{StaticResource BackgroundLightBrush}" CornerRadius="2" BorderThickness="0 0 0 1" BorderBrush="Gray">
						<ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
</ResourceDictionary>