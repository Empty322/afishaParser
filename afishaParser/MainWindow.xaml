<Window x:Class="afishaParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:afishaParser"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="200" MinWidth="630" Width="630" Loaded="Window_Loaded">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition MinWidth="400" Width="487*"></ColumnDefinition>
			<ColumnDefinition Width="120*"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<DataGrid x:Name="dataGrid" Grid.Column="0" GridLinesVisibility="Vertical" HorizontalGridLinesBrush="#FF4D4D4D" VerticalGridLinesBrush="#FF5B5B5B" IsReadOnly="True">
			<DataGrid.RowDetailsTemplate>
				<DataTemplate>
					<DockPanel Name="s">
						<Image HorizontalAlignment="Left" DockPanel.Dock="Left" Source="{Binding Path=ImgPath}" Width="180"></Image>
						<TextBlock FontSize="10" Width="270" Name="descr" DockPanel.Dock="Right" Text="{Binding Path=Description}" Margin="5" TextWrapping="Wrap"></TextBlock>
					</DockPanel>
				</DataTemplate>
			</DataGrid.RowDetailsTemplate>
		</DataGrid>
		<StackPanel Grid.Column="1">
			<Button Name="synchroBtn" Height="30" Margin="5" Click="Button_Click" IsEnabled="False">Синхронизировать</Button>
		</StackPanel>
	</Grid>
</Window>
